<Window x:Class="WitcherBooks.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Width="800" Height="700">

    <Grid Background="#2A2A2A">
        <Border CornerRadius="10" BorderBrush="#A87D4D" BorderThickness="3" Padding="20" Background="#1E1E1E" Margin="30">
            <StackPanel>

                <TextBlock Text="Edit Book"
                           FontSize="26"
                           FontWeight="Bold"
                           FontFamily="Georgia"
                           Foreground="#D6B877"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                
                <Image x:Name="ImagePreview"
                       Width="120" Height="120"
                       Stretch="UniformToFill"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>
                <TextBlock x:Name="imageError"
                           Foreground="Red"
                           FontSize="12"
                           Text="Please select an image."
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"/>

                <Button Content="Change Image"
                        Width="120"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"
                        Click="ChangeImage_Click"
                        Background="#6A1E1E"
                        Foreground="White"
                        FontFamily="Georgia"/>

                
                <Label Content="Title:"
                       FontFamily="Georgia"
                       Foreground="#D6B877"/>
                <TextBox x:Name="TitleBox"
                         FontWeight="Bold"
                         FontSize="14"
                         FontFamily="Georgia"
                         Margin="0,0,0,5"
                         TextChanged="TitleBox_TextChanged"/>
                <TextBlock x:Name="titleError"
                           Foreground="Red"
                           FontSize="12"
                           Text="Title cannot be empty."
                           Visibility="Collapsed"/>

               
                <Label Content="Date Added:"
                       FontFamily="Georgia"
                       Foreground="#D6B877"/>
                <TextBlock x:Name="DateBlock"
                           FontFamily="Georgia"
                           Foreground="White"
                           Margin="0,0,0,20"/>

               
                <ToolBar Background="#2A2A2A" BorderBrush="#A87D4D" BorderThickness="1" Margin="0,0,0,10">
                    <Button Content="Bold" Click="Bold_Click" FontFamily="Georgia" Foreground="White" Background="#3B3B3B" Margin="2"/>
                    <Button Content="Italic" Click="Italic_Click" FontFamily="Georgia" Foreground="White" Background="#3B3B3B" Margin="2"/>
                    <Button Content="Underline" Click="Underline_Click" FontFamily="Georgia" Foreground="White" Background="#3B3B3B" Margin="2"/>

                    <ComboBox x:Name="FontSizeBox" Width="60" SelectionChanged="FontSizeBox_SelectionChanged" Margin="10,0,0,0" Background="#3B3B3B" Foreground="White" FontFamily="Georgia">
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="16"/>
                        <ComboBoxItem Content="18"/>
                        <ComboBoxItem Content="20"/>
                    </ComboBox>

                    <ComboBox x:Name="FontFamilyBox" Width="150" SelectionChanged="FontFamilyBox_SelectionChanged" Background="#3B3B3B" Foreground="White" FontFamily="Georgia" Margin="10,0,0,0">
                        <ComboBoxItem Content="Arial"/>
                        <ComboBoxItem Content="Times New Roman"/>
                        <ComboBoxItem Content="Calibri"/>
                        <ComboBoxItem Content="Consolas"/>
                        <ComboBoxItem Content="Segoe UI"/>
                    </ComboBox>

                    <Button Content="Color" Click="Color_Click" FontFamily="Georgia" Foreground="White" Background="#3B3B3B" Margin="10,0,0,0"/>
                </ToolBar>

            
                <RichTextBox x:Name="ContentBox"
                             Height="120"
                             FontFamily="Georgia"
                             Foreground="White"
                             Background="#333"
                             BorderBrush="#A87D4D"
                             BorderThickness="1"
                             Margin="0,0,0,5"/>
                <TextBlock x:Name="descError"
                           Foreground="Red"
                           FontSize="12"
                           Text="Please enter a description."
                           Visibility="Collapsed"/>

             
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="saveBT" Content="Save" Width="100" Height="40" Click="SaveBT_Click" Background="#6A1E1E" Foreground="White" FontFamily="Georgia"/>
                    <Button x:Name="cancelBT" Content="Cancel" Width="100" Height="40" Click="CancelBT_Click" Background="#6A1E1E" Foreground="White" FontFamily="Georgia"/>
                </StackPanel>

            
                <ToggleButton x:Name="MuteButton"
                              Margin="0,10,0,0"
                              Width="80"
                              Content="Mute"
                              Checked="MuteButton_Checked"
                              Unchecked="MuteButton_Unchecked"
                              Background="#A87D4D"
                              Foreground="Black"
                              FontFamily="Georgia"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
