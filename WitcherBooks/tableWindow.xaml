<Window x:Class="WitcherBooks.tableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Witcher Books"
        Width="900" Height="700"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Grid Background="#2A2A2A" Margin="20">
        <Border CornerRadius="10" BorderThickness="4" BorderBrush="#A87D4D" Background="#1E1E1E" Padding="10">
            <StackPanel>
                <TextBlock Text="Witcher Book Archive"
                           FontSize="28"
                           FontFamily="Georgia"
                           FontWeight="Bold"
                           Foreground="#D6B877"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <!-- datagrid -->
                <DataGrid x:Name="BookDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="False"
                          CanUserReorderColumns="False"
                          IsReadOnly="True"
                          Background="#1E1E1E"
                          RowBackground="#2A2A2A"
                          AlternatingRowBackground="#1E1E1E"
                          Foreground="White"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          HeadersVisibility="Column"
                          FontFamily="Georgia"
                          FontSize="14"
                          Margin="0,0,0,20"
                          Height="400"
                          ItemsSource="{Binding books}"
                          >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2E2E2E"/>
                            <Setter Property="Foreground" Value="#D6B877"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Georgia"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="#A87D4D"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <!-- checkboxes -->
                        <DataGridTemplateColumn Width="35">
                            <DataGridTemplateColumn.Header>
                                <CheckBox x:Name="SelectAllCheckBox" Click="SelectAllCheckBox_Click"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding isDeleting, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>

                        <!-- link -->
                        <DataGridTemplateColumn Header="Title" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center">
                                        <Hyperlink Click="hyperlink_Click" Foreground="White" Tag="{Binding}">
                                            <Run Text="{Binding Title}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Cover" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Imgpath}" Height="40" Width="40" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Added On" Binding="{Binding Date}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="addBT" Content="Add" Click="addBT_Click"
                            Width="100" Margin="10,0"
                            Background="#A87D4D" Foreground="Black" FontFamily="Georgia"/>
                    
                  
                    <Button x:Name="logOutBT" Content="Log Out" Click="logOutBT_Click"
                            Width="100" Margin="10,0"
                            Background="#444" Foreground="White" FontFamily="Georgia"/>
                    <Button x:Name="delBT" Content="Delete" Click="delBT_Click"
          Width="100" Margin="10,0"
          Background="#6A1E1E" Foreground="White" FontFamily="Georgia"/>
                    

                </StackPanel>
                <ToggleButton x:Name="MuteButton"
            Width="80"
            Content="Mute"
            Checked="MuteButton_Checked"
            Unchecked="MuteButton_Unchecked"
            Background="#a87d4d"
            Foreground="Black"
            FontFamily="Georgia"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
